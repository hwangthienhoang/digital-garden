{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "types": ["vuepress/client-types", "vite/client", "vitest.config.ts"]
  },
  "include": [
    "**/.vuepress/**/*",
    "**/resources/**/*",
    "e2e/**/*",
    "plugins/**/*",
    "themes/**/*",
    "tools/**/*"
  ],
  "exclude": ["node_modules", ".temp", "lib", "dist"]
}
